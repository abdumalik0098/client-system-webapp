@model IEnumerable<ClientSystemWebApp.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Клиентская база</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Добавить новый клиент</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Номер
            </th>
            <th>
                Код
                @*@Html.DisplayNameFor(model => model.Code)*@
            </th>
            <th>
                Имя
                @*@Html.DisplayNameFor(model => model.FirstName)*@
            </th>
            <th>
                Фамилия
                @*@Html.DisplayNameFor(model => model.LastName)*@
            </th>
            <th>
                Место работы
                @*@Html.DisplayNameFor(model => model.PlaceOfWork)*@
            </th>
            <th>
                Адрес
                @*@Html.DisplayNameFor(model => model.Adress)*@
            </th>
            <th>
                Телефон
                @*@Html.DisplayNameFor(model => model.PhoneNumber)*@
            </th>
            <th>
                E-mail
                @*@Html.DisplayNameFor(model => model.Email)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{int k = 0;}
        @foreach (var item in Model) {
         
        <tr>
            <td>
                @{
                    k++;
                }
                @k
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaceOfWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle btn btn-secondary"></i></a> 
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square btn btn-primary"></i></a> 
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill btn btn-danger"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
